/*
---------------------
    Responsiveness
---------------------
*/
@media (max-width: 1024px)
    nav
        ul
            li
                margin-left: 30px

    #events
        .row
            .event
                width: calc(50% - 30px)
                float: left

    #supporters
        .row
            .col-md-3
                width: calc(50% - 30px)
                float: left

    footer
        padding-top: 50px
        .row
            .col-md-3
                float: left
                width: calc(50% - 30px)
                margin-bottom: 30px

    footer, .page-wrap:after
        height: 480px

    .page-wrap
        margin-bottom: -480px


@media (max-width: 725px)
    nav
        ul
            display: none

    #box-with-picture
        height: auto
        background-position: center center

        .container
            padding: 20px

            h1
                font-size: 30px
                line-height: 36px
            p
                font-size: 18px
                line-height: 22px

    #about
        .gallery
            display: none

    #events
        .row
            .event
                width: 90%

    #organize
        form
            input[type="text"], input[type="email"]
                margin-bottom: 15px

    #supporters
        .row
            .col-md-3
                width: 90%

    footer
        padding-top: 50px
        .row
            .col-md-3
                width: 90%
                margin-bottom: 30px

    footer, .page-wrap:after
        height: 900px

    .page-wrap
        margin-bottom: -900px

