/* GLOBAL STYLES
-------------------------------------------------- */
/* Padding below the footer and lighter body text */

body
    padding-bottom: 40px
    color: #5a5a5a

/*
------------------------
    Events
------------------------
*/
#events
    h2
        margin-bottom: 15px

    .event
        margin: 15px 15px 15px 15px
        padding: 0
        background: url('../img/global/krakow.png') no-repeat
        background-size: cover
        width: calc(33% - 30px)
        height: 210px
        text-align: center
        color: white
        font-style: italic

        .overlay
            height: 100%
            width: 100%
            background: rgba(0,0,0,0.5)
            padding: 70px 0 0 0

            &:hover
                background: rgba(0,0,0,0.3)

        p.city
            font-size: 36px
            line-height: 41px
            margin-bottom: 0

        span.date
            font-size: 23px
            line-height: 27px

        p.credit
            font-size: 12px
            text-align: left
            font-family: sans_font
            font-style: normal
            bottom: -5px
            left: 10px
            position: absolute
            opacity: 0

        &:hover
            p.credit
                opacity: 1

    .past-events
        margin-top: 40px

        a
            margin-right: 60px
            margin-bottom: 15px
            float: left

        .col-md-12
            max-height: 200px
            overflow: hidden

        .show-more
            width: 100%
            height: 100px
            position: relative
            float: left
            margin-top: -55px
            padding-top: 63px
            text-align: center
            background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* FF3.6+ */
            background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* Opera 11.10+ */
            background: -ms-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* IE10+ */
            background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 53%); /* W3C */

            a
                float: none
                margin: 0
