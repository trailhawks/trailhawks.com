/* ---------------------
 Responsive design fixes
---------------------- */

@media (max-width: 1024px)

    h1
        font-size: 36px

    h2
        font-size: 26px

    #about
        background-attachment: scroll
        height: auto
        .overlay
            padding: 80px 0

    #apply
        background-attachment: scroll

    #coach
        background-attachment: scroll

    footer
        background-attachment: scroll
        background-position: 0

    #value
        .col-md-6:last-child
            margin-top: 40px

    #sponsors
        img
            max-width: 300px
            margin-top: 30px
        .row
            padding: 0 0 30px 0

    footer .social .twitter
        margin-top: 0px

    .navbar-default
        .navbar-nav
            .optional
                display: none

.sponsor-logos
    margin: 30px 0 0 0
    .col-md-3
        text-align: center

        img
            max-width: 80%
            height: auto

        p
            margin-top: 15px

#resources
    .row
        margin-bottom: 50px

    .cover
        float: left
        margin: 0 30px 0 0
        img
            border-radius: 3px

    .info
        p
            margin-bottom: 0
        .btn
            margin-bottom: 10px
            padding: 10px 30px

/* Smartphones (portrait) ----------- */
@media only screen and (max-width : 480px)
    #about .overlay
        padding-top: 50px
        padding-bottom: 50px

    #about
        background-position: 0

    h1
        font-size: 30px

    h2
        font-size: 24px

    footer .social .twitter
        margin: 50px 0 0 12px

    #sponsors
        .row
            padding: 0 0 30px 0

    .navbar-default
        .navbar-nav
            width: auto
            padding-left: 0px
            li
                height: auto
                padding-top: 10px
                a
                    color: black

    .navbar-default .navbar-collapse
        border: 0px !important
        margin-top: 20px

@media only screen and (max-width : 320px)
    #about
        .overlay
            h1
                font-size: 50px

            h2
                font-size: 30px
