/*
--------------
    Footer
--------------
*/
.page-wrap
    min-height: 100%
    margin-bottom: -300px

    &:after
        content: ""
        display: block

footer, .page-wrap:after
    height: 300px

footer
    background: #F9F7F7
    padding: 65px 0 0 0
    margin-top: 90px

    .row
        margin: 0

        .col-md-3
            p
                text-transform: uppercase
                font-family: sans_font
                color: orange
                font-size: 18px
                line-height: 21px
            ul
                list-style-type: none
                padding: 0

                li
                    margin-left: 0
                    font-size: 18px
                    line-height: 28px

                    a
                        text-decoration: none

